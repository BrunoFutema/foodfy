{% block head %}
  <title>Foodfy - Login</title>
  {% include 'parts/styles.njk' %}
{% endblock %}
{% block content %}
  {% include 'parts/messages.njk' %}
  <main class="login">
    <div class="content">
      <div class="header-login">
        <a href="/">
          <img src="/assets/logo-dark.png" alt="Logo do Foodfy">
        </a>
      </div>
      <form method="POST" action="/session/forgot-password">
        <strong>Esqueceu a Senha?</strong>
        <div class="items">
          <div class="item">
            <strong>Email</strong>
            <div>
              <input
                type="email"
                name="email"
                placeholder="Digite seu email para recuperar a senha"
              >
            </div>
          </div>
        </div>
        <div class="actions forgot">
          <button type="submit" class="button">Recuperar</button>
        </div>
      </form>
  </main>
{% endblock %}
