{% block head %}
  <title>Foodfy - Login</title>
  {% include 'parts/styles.njk' %}
{% endblock %}
{% block content %}
  {% include 'parts/messages.njk' %}
  <main class="login">
    <div class="content">
      <div class="header-login">
        <a href="/">
          <img src="/assets/logo-dark.png" alt="Logo do Foodfy">
        </a>
      </div>
      <form method="POST" action="/session/reset-password">
        <strong>Nova Senha</strong>
        <div class="items">
          <div class="item">
            <strong>Email</strong>
            <div>
              <input
                type="email"
                name="email"
                placeholder="Digite seu email"
              >
            </div>
          </div>
          <div class="item">
            <strong>Nova Senha</strong>
            <div>
              <input
                type="password"
                name="password"
                placeholder="Digite sua nova senha"
              >
            </div>
          </div>
          <div class="item">
            <strong>Repetir Senha</strong>
            <div>
              <input
                type="password"
                name="passwordRepeat"
                placeholder="Repita a nova senha"
              >
            </div>
          </div>
        </div>
        <input type="hidden" name="token" value="{{token}}">
        <div class="actions forgot">
          <button type="submit" class="button">Nova Senha</button>
        </div>
      </form>
  </main>
{% endblock %}
