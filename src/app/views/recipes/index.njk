{% extends 'layout.njk' %}

{% block head %}
  <title>Foodfy - Receitas</title>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}
{% block content %}
  <main class="recipes">
    <section class="content recipes-background">
      <div class="recipes-grid">
        {% for recipe in recipes %}
          <div class="recipe" id="{{recipe.id}}" onClick="window.location.href='/recipes/{{recipe.id}}'">
            <img src="{{recipe.img}}" alt="Imagem de {{recipe.title}}">
            <strong>{{recipe.title}}</strong>
            <span>por {{recipe.author}}</span>
          </div>
        {% endfor %}
      </div>
    </section>
  </main>
{% endblock %}
