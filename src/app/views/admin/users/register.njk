{% extends 'layout.njk' %}

{% block head %}
  <title>Foodfy - Cadastrar novo usuário</title>
{% endblock %}
{% block content %}
  <main>
    <section class="user-section">
      <div class="content">
        <form method="POST" action="/admin/users">
          <div class="header-user">
            <strong>Criando Usuário</strong>
            <div>
              <button type="submit">Salvar</button>
              <a href="/admin/users">Cancelar</a>
            </div>
          </div>
          {% include 'admin/users/fields.njk' %}
          <div class="is-admin">
            <input type="checkbox" name="is_admin">
            <strong>Administrador</strong>
          </div>
        </form>
      </div>
    </section>
  </main>
{% endblock %}
